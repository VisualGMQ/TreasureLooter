<schema>
    <include>entity.hpp</include>
    <include>transform.hpp</include>
    <include>tilemap.hpp</include>
    <include>animation_player.hpp</include>
    <import>sprite</import>
    <import>relationship</import>
    <import>anim</import>
    <import>anim_player</import>

    <class name="Prefab">
        <option type="Sprite" name="sprite"/>
        <option type="Transform" name="transform"/>
        <option type="Relationship" name="relationship"/>
        <option type="AnimationPlayerCreateInfo" name="animation"/>
        <handle type="Tilemap" name="tilemap"/>
    </class>
    
    <asset name="EntityInstance" extension=".prefab">
        <element type="Entity" name="entity"/>
        <element type="Prefab" name="data"/>
    </asset>
</schema>