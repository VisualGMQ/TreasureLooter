<schema>
    <enum name = "UIType">
        <item name="Unknown"/>
        <item name="Text"/>
        <item name="Button"/>
        <item name="Panel"/>
        <item name="Table"/>
    </enum>
    
    <enum name="UIAnchor">
        <item name="None" value="0"/>
        <item name="Center" value="1"/>
        <item name="Left"   value="0x02"/>
        <item name="Right"  value="0x04"/>
        <item name="Top"    value="0x08"/>
        <item name="Bottom" value="0x10"/>
    </enum>
    
    <asset name = "UIWidgetInfo" extension=".ui">
        <element name="type"  type="UIType" default="UIType::Unknown"/>
    </asset>
</schema>